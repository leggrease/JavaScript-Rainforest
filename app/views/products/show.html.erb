<h1>Product</h1>
<p><%= @product.name %>, $<%= @product.formatted_price %>, <%= @product.description %> </p>

<%= link_to "Back to Products", products_url %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"}  %>

<% if current_user %>
	
	<div id="review-list">
		<%= render 'reviews' %>
	</div>
	<%= render 'formnewreview' %>

<% end %>

<script type="text/javascript">
	$(function() {
		$("#new_review")
			.on('ajax:beforeSend', function() {
				$("input[type='submit']")
					.val('Saving...')
					.attr('disabled', 'disabled');
			})
			.on('ajax:complete', function() {
				$("input[type='submit']")
					.val('Create Review')
					.removeAttr('disabled');
			});
	});
</script>