<h1>Products</h1>
<h2><%= link_to "New Product", "/products/new" %></h2>


<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<hr/>

<div id="products">
	<%= render @products %>
</div>
<div id="productspaginate">
<%= paginate @products %>
</div>


