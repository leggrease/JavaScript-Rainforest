 <h3> Reviews</h3>

	 <p>Reviews for <%= @product.name %></p>

	 <% @product.reviews.newest_first.each do |review| %>
	 	<p>
	 		<%= review.comment %>
	 		<br>
	 		<% if review.user != nil %>
	 			<em> by <%=link_to review.user.name, user_url(review.user) %></em>

	 			Added on: <%= review.created_at %>
	 		<% end %>
	 	</p>
	 <% end %>